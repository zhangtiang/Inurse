<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_cloudmail"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_gravity="center"
            android:text="Mail"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_cloudsave"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_gravity="center"
            android:text="Save"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_cloudupload"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_gravity="center"
            android:text="Upload"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_cloudprint"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_gravity="center"
            android:text="Print"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_cloudshare"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_gravity="center"
            android:text="Share"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>